@model SCMS.Domain.TienPVK.Models.ClubsTienPvk

@{
    ViewData["Title"] = "Delete Club";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Club
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-circle"></i> Are you sure you want to delete this club?
                        </h5>
                        <p class="mb-0">This action cannot be undone. All associated data will be permanently removed.
                        </p>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <h5 class="border-bottom pb-2 mb-3">Club Information</h5>
                            <dl class="row">
                                <dt class="col-sm-5">Club Code:</dt>
                                <dd class="col-sm-7">
                                    <strong class="text-danger">@Model.ClubCode</strong>
                                </dd>

                                <dt class="col-sm-5">Club Name:</dt>
                                <dd class="col-sm-7">
                                    <strong>@Model.ClubName</strong>
                                </dd>

                                <dt class="col-sm-5">Category:</dt>
                                <dd class="col-sm-7">
                                    @Model.Category?.CategoryName
                                </dd>

                                <dt class="col-sm-5">Status:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.Status == "Active")
                                    {
                                        <span class="badge bg-success">@Model.Status</span>
                                    }
                                    else if (Model.Status == "Inactive")
                                    {
                                        <span class="badge bg-secondary">@Model.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">@Model.Status</span>
                                    }
                                </dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <h5 class="border-bottom pb-2 mb-3">Additional Details</h5>
                            <dl class="row">
                                <dt class="col-sm-5">Founded Date:</dt>
                                <dd class="col-sm-7">
                                    @Model.FoundedDate.ToString("MMM dd, yyyy")
                                </dd>

                                <dt class="col-sm-5">Member Limit:</dt>
                                <dd class="col-sm-7">
                                    @Model.MemberLimit members
                                </dd>

                                <dt class="col-sm-5">Email:</dt>
                                <dd class="col-sm-7">
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        @Model.Email
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Phone:</dt>
                                <dd class="col-sm-7">
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        @Model.Phone
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mt-3">
                            <h6 class="text-muted">Description:</h6>
                            <p class="text-muted fst-italic">@Model.Description</p>
                        </div>
                    }
                </div>

                <div class="card-footer bg-transparent">
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ClubIdtienPvk" />
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
        }

        dl {
            margin-bottom: 0;
        }

        dt {
            font-weight: 600;
            color: #6c757d;
        }

        dd {
            margin-bottom: 0.75rem;
        }
    </style>
}