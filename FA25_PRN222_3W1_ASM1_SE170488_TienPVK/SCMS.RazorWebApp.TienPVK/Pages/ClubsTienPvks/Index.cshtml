@page
@model SCMS.RazorWebApp.TienPVK.Pages.ClubsTienPvks.IndexModel
@using System.Linq

@{
    ViewData["Title"] = "Clubs";
}

<section class="club-page">
    <!-- Toast Container -->
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999">
        <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle-fill me-2"></i> <span id="successMessage"></span>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
        <div id="errorToast" class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-exclamation-circle-fill me-2"></i> <span id="errorMessage"></span>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
    
    <div class="club-hero mb-4 p-4 p-md-5 rounded text-white">
        <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-4">
            <div>
                <p class="text-uppercase small mb-1 fw-semibold">Campus life</p>
                <h1 class="display-6 fw-bold mb-2">Explore student clubs</h1>
                <p class="mb-0 text-white-75">Browse active communities, check their capacity, and connect with club
                    managers in one place.</p>
            </div>
            <div class="text-lg-end">
                <a asp-page="Create" class="btn btn-light btn-lg fw-semibold shadow-sm">+ Create new club</a>
            </div>
        </div>
    </div>

    <!-- Search Form -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="searchClubCode" class="form-label">Club Code</label>
                    <input type="text" class="form-control" id="searchClubCode" name="SearchClubCode" 
                           value="@Model.SearchClubCode" placeholder="Search by code...">
                </div>
                <div class="col-md-4">
                    <label for="searchClubName" class="form-label">Club Name</label>
                    <input type="text" class="form-control" id="searchClubName" name="SearchClubName" 
                           value="@Model.SearchClubName" placeholder="Search by name...">
                </div>
                <div class="col-md-3">
                    <label for="searchStatus" class="form-label">Status</label>
                    <select class="form-select" id="searchStatus" name="SearchStatus">
                        <option value="">All Statuses</option>
                        <option value="Active" selected="@(Model.SearchStatus == "Active")">Active</option>
                        <option value="Inactive" selected="@(Model.SearchStatus == "Inactive")">Inactive</option>
                        <option value="Pending" selected="@(Model.SearchStatus == "Pending")">Pending</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary flex-fill">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a href="@Url.Page("Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex flex-wrap gap-3 align-items-center mb-4">
        <div class="stat-chip">
            <span class="label">Total clubs</span>
            <span class="value">@Model.TotalItems</span>
        </div>
        <div class="stat-chip">
            <span class="label">Open to join</span>
            <span class="value">@Model.ClubsTienPvk?.Count(c => c.IsOpenToJoin)</span>
        </div>
        <div class="stat-chip">
            <span class="label">Need approval</span>
            <span class="value">@Model.ClubsTienPvk?.Count(c => c.RequiresApproval)</span>
        </div>
    </div>

    @if (Model.ClubsTienPvk == null || !Model.ClubsTienPvk.Any())
    {
        <div class="alert alert-light border rounded-3">No clubs found. Be the first to <a asp-page="Create">create one</a>.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
            @foreach (var item in Model.ClubsTienPvk)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm club-card" id="@item.ClubIdtienPvk">
                        <div class="card-body d-flex flex-column gap-3">
                            <div class="d-flex justify-content-between align-items-start gap-3">
                                <div>
                                    <span
                                        class="badge bg-primary-subtle text-primary-emphasis mb-2">@item.Category?.CategoryCode
                                        ?? "General"</span>
                                    <h2 class="h5 mb-1">@item.ClubName</h2>
                                    <p class="text-muted mb-0">@item.ClubCode</p>
                                </div>
                                <span class="status-pill @GetStatusClass(item.Status)">@item.Status</span>
                            </div>

                            <p class="text-body-secondary mb-0 club-description">@item.Description</p>

                            <div class="d-flex flex-column gap-2 small text-body-secondary">
                                <div class="d-flex justify-content-between">
                                    <span>Founded</span>
                                    <span>@item.FoundedDate.ToString("dd MMM yyyy")</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Member limit</span>
                                    <span>@item.MemberLimit</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Manager</span>
                                    <span>@item.ManagerUser?.Email ?? "â€”"</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Contact</span>
                                    <span>@item.Email</span>
                                </div>
                            </div>

                            <div class="d-flex flex-wrap gap-2">
                                @if (item.IsOpenToJoin)
                                {
                                    <span class="badge rounded-pill bg-success-subtle text-success-emphasis">Open to join</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-secondary-subtle text-secondary-emphasis">Closed</span>
                                }

                                @if (item.RequiresApproval)
                                {
                                    <span class="badge rounded-pill bg-warning-subtle text-warning-emphasis">Approval
                                        required</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-info-subtle text-info-emphasis">Auto enrollment</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 pt-0">
                            <div class="btn-group w-100" role="group">
                                <a class="btn btn-outline-primary" asp-page="./Details"
                                    asp-route-id="@item.ClubIdtienPvk">Details</a>
                                <a class="btn btn-outline-secondary" asp-page="./Edit"
                                    asp-route-id="@item.ClubIdtienPvk">Edit</a>
                                <a class="btn btn-outline-danger" asp-page="./Delete"
                                    asp-route-id="@item.ClubIdtienPvk">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Pagination Controls -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-5">
            <ul class="pagination justify-content-center">
                <!-- Previous Button -->
                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-page="./Index" asp-route-pageNumber="@(Model.PageNumber - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span> Previous
                    </a>
                </li>

                <!-- Page Numbers -->
                @{
                    int startPage = Math.Max(1, Model.PageNumber - 2);
                    int endPage = Math.Min(Model.TotalPages, Model.PageNumber + 2);

                    if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="./Index" asp-route-pageNumber="1">1</a>
                        </li>
                        if (startPage > 2)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                    }

                    for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-page="./Index" asp-route-pageNumber="@i">@i</a>
                        </li>
                    }

                    if (endPage < Model.TotalPages)
                    {
                        if (endPage < Model.TotalPages - 1)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                        <li class="page-item">
                            <a class="page-link" asp-page="./Index" asp-route-pageNumber="@Model.TotalPages">@Model.TotalPages</a>
                        </li>
                    }
                }

                <!-- Next Button -->
                <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-page="./Index" asp-route-pageNumber="@(Model.PageNumber + 1)" aria-label="Next">
                        Next <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="text-center text-muted small mt-3">
            Page @Model.PageNumber of @Model.TotalPages (@Model.TotalItems total clubs)
        </div>
    }
</section>

<!-- Toast Container -->
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999">
    <div id="successToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-check-circle"></i> <span id="toastMessage"></span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script>
        "use strict";

        function showToast(message, isSuccess = true) {
            if (isSuccess) {
                document.getElementById('successMessage').textContent = message;
                var toast = new bootstrap.Toast(document.getElementById('successToast'));
                toast.show();
            } else {
                document.getElementById('errorMessage').textContent = message;
                var toast = new bootstrap.Toast(document.getElementById('errorToast'));
                toast.show();
            }
        }

        // Show TempData messages on page load
        document.addEventListener('DOMContentLoaded', function() {
            @if (TempData["ErrorMessage"] != null)
            {
                <text>
                showToast('@TempData["ErrorMessage"]', false);
                </text>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                showToast('@TempData["SuccessMessage"]', true);
                </text>
            }
        });

        var connection = new signalR.HubConnectionBuilder()
            .withUrl("/clubHub")
            .configureLogging(signalR.LogLevel.None) // Off logging; change to Information for debugging
            .build();

        connection.start().then(function ()
        {
            console.log("SignalR connected successfully on Index page");
        }).catch(function (err)
        {
            console.error("SignalR connection error:", err.toString());
        });

        connection.on("DeleteClub", function (clubId)
        {
            console.log("Received DeleteClub event for ID:", clubId);
            showToast('Club deleted successfully!', true);
            
            // Find the card div with the matching ID and remove its parent column
            var card = document.getElementById(clubId);

            if (card)
            {
                var colDiv = card.closest('.col');
                if (colDiv)
                {
                    colDiv.style.transition = 'opacity 0.4s ease';
                    colDiv.style.opacity = '0';
                    setTimeout(function ()
                    {
                        colDiv.remove();
                        console.log("Card removed from DOM");
                    }, 400);
                }
            } else
            {
                console.warn("Card not found with ID:", clubId);
            }
        });

        connection.on("CreateClub", function (clubId)
        {
            console.log("Received CreateClub event for ID:", clubId);
            showToast('New club created successfully!', true);
            // Fetch and add the new club card to the page
            fetch(`/ClubsTienPvks/Index?handler=GetClubCard&clubId=${clubId}`)
                .then(response => response.text())
                .then(html =>
                {
                    if (html && html.trim() !== '')
                    {
                        var clubGrid = document.querySelector('.row.row-cols-1');
                        if (clubGrid)
                        {
                            var tempDiv = document.createElement('div');
                            tempDiv.innerHTML = html;
                            var newCard = tempDiv.firstElementChild;
                            if (newCard)
                            {
                                newCard.style.opacity = '0';
                                clubGrid.insertBefore(newCard, clubGrid.firstChild);
                                setTimeout(() => newCard.style.opacity = '1', 100);
                                console.log("New club card added");
                            }
                        }
                    }
                })
                .catch(err => console.error("Error fetching new club:", err));
        });

        connection.on("UpdateClub", function (clubId)
        {
            console.log("Received UpdateClub event for ID:", clubId);
            showToast('Club updated successfully!', true);
            
            // Fetch and update the club card
            var card = document.getElementById(clubId);
            if (card)
            {
                fetch(`/ClubsTienPvks/Index?handler=GetClubCard&clubId=${clubId}`)
                    .then(response => response.text())
                    .then(html =>
                    {
                        if (html && html.trim() !== '')
                        {
                            var tempDiv = document.createElement('div');
                            tempDiv.innerHTML = html;
                            var updatedCard = tempDiv.firstElementChild;
                            if (updatedCard)
                            {
                                var colDiv = card.closest('.col');
                                if (colDiv)
                                {
                                    colDiv.innerHTML = updatedCard.innerHTML;
                                    colDiv.classList.add('updated-flash');
                                    setTimeout(() => colDiv.classList.remove('updated-flash'), 1000);
                                    console.log("Club card updated");
                                }
                            }
                        }
                    })
                    .catch(err => console.error("Error updating club:", err));
            }
        });
    </script>
}

@functions {
    private static string GetStatusClass(string? status)
    {
        return status?.ToLower() switch
        {
            "active" => "status-pill-success",
            "inactive" => "status-pill-muted",
            "suspended" => "status-pill-warning",
            _ => "status-pill-muted"
        };
    }
}

<style>
    .club-page {
        animation: fadeIn .3s ease-in;
    }

    .club-hero {
        background: linear-gradient(120deg, #0d6efd, #35a0ff);
    }

    .stat-chip {
        border: 1px solid rgba(13, 110, 253, 0.15);
        border-radius: 999px;
        padding: 0.5rem 1.5rem;
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
    }

    .stat-chip .label {
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.08em;
        color: #6c757d;
    }

    .stat-chip .value {
        font-weight: 600;
        color: #0d6efd;
    }

    .club-card {
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: transform 0.15s ease, box-shadow 0.15s ease;
    }

    .club-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 1rem 2rem rgba(13, 110, 253, 0.08);
    }

    .club-description {
        min-height: 60px;
    }

    .status-pill {
        padding: 0.35rem 0.75rem;
        border-radius: 999px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: capitalize;
    }

    .status-pill-success {
        color: #0f5132;
        background-color: #d1e7dd;
    }

    .status-pill-warning {
        color: #664d03;
        background-color: #fff3cd;
    }

    .status-pill-muted {
        color: #495057;
        background-color: #e9ecef;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(8px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .updated-flash {
        animation: flashUpdate 1s ease;
    }

    @@keyframes flashUpdate {
        0%, 100% {
            background-color: transparent;
        }
        50% {
            background-color: rgba(13, 110, 253, 0.1);
        }
    }</style>