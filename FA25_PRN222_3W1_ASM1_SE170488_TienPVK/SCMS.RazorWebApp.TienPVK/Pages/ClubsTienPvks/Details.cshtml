@page
@model SCMS.RazorWebApp.TienPVK.Pages.ClubsTienPvks.DetailsModel

@{
    ViewData["Title"] = Model.ClubsTienPvk?.ClubName ?? "Club Details";
    var club = Model.ClubsTienPvk;
}

<div class="club-details-page">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="./Index">Clubs</a></li>
            <li class="breadcrumb-item active" aria-current="page">@club?.ClubName</li>
        </ol>
    </nav>

    <!-- Header Section -->
    <div class="detail-header mb-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start gap-3">
            <div class="flex-grow-1">
                <div class="d-flex align-items-center gap-3 mb-2">
                    <span class="badge bg-primary fs-6">@club?.Category?.CategoryCode</span>
                    <span class="status-badge status-@club?.Status?.ToLower()">@club?.Status</span>
                </div>
                <h1 class="display-5 fw-bold mb-2">@club?.ClubName</h1>
                <p class="text-muted mb-0">
                    <i class="bi bi-hash"></i> @club?.ClubCode
                </p>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-primary btn-lg" asp-page="./Edit" asp-route-id="@club?.ClubIdtienPvk">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a class="btn btn-outline-secondary btn-lg" asp-page="./Index">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="row g-4">
        <!-- Left Column - Primary Info -->
        <div class="col-lg-8">
            <!-- About Section -->
            <div class="card shadow-sm mb-4 detail-card">
                <div class="card-header bg-white border-0 pt-4">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-info-circle text-primary"></i> About this club
                    </h5>
                </div>
                <div class="card-body">
                    <p class="lead text-secondary">
                        @(club?.Description ?? "No description available.")
                    </p>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card shadow-sm mb-4 detail-card">
                <div class="card-header bg-white border-0 pt-4">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-envelope text-primary"></i> Contact information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">Email</label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(club?.Email))
                                    {
                                        <a href="mailto:@club.Email" class="text-decoration-none">@club.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">Phone</label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(club?.Phone))
                                    {
                                        <a href="tel:@club.Phone" class="text-decoration-none">@club.Phone</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="info-item">
                                <label class="info-label">Address</label>
                                <div class="info-value">@(club?.Address ?? "—")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Membership Details -->
            <div class="card shadow-sm detail-card">
                <div class="card-header bg-white border-0 pt-4">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-people text-primary"></i> Membership
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="membership-stat">
                                <div class="stat-number">@club?.MemberLimit</div>
                                <div class="stat-label">Member limit</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="membership-stat">
                                <div class="stat-badge">
                                    @if (club?.IsOpenToJoin == true)
                                    {
                                        <span class="badge rounded-pill bg-success fs-6 py-2 px-3">
                                            <i class="bi bi-check-circle"></i> Open
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-secondary fs-6 py-2 px-3">
                                            <i class="bi bi-lock"></i> Closed
                                        </span>
                                    }
                                </div>
                                <div class="stat-label">Join status</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="membership-stat">
                                <div class="stat-badge">
                                    @if (club?.RequiresApproval == true)
                                    {
                                        <span class="badge rounded-pill bg-warning text-dark fs-6 py-2 px-3">
                                            <i class="bi bi-shield-check"></i> Required
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-info fs-6 py-2 px-3">
                                            <i class="bi bi-lightning"></i> Auto
                                        </span>
                                    }
                                </div>
                                <div class="stat-label">Approval</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Metadata -->
        <div class="col-lg-4">
            <!-- Key Information -->
            <div class="card shadow-sm mb-4 detail-card">
                <div class="card-header bg-white border-0 pt-4">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-clipboard-data text-primary"></i> Quick info
                    </h5>
                </div>
                <div class="card-body">
                    <div class="info-item mb-3">
                        <label class="info-label">Club manager</label>
                        <div class="info-value d-flex align-items-center gap-2">
                            <div class="user-avatar">
                                <i class="bi bi-person-circle"></i>
                            </div>
                            <span>@(club?.ManagerUser?.Email ?? "Not assigned")</span>
                        </div>
                    </div>
                    <div class="info-item mb-3">
                        <label class="info-label">Founded date</label>
                        <div class="info-value">
                            <i class="bi bi-calendar-event"></i>
                            @club?.FoundedDate.ToString("MMMM dd, yyyy")
                        </div>
                    </div>
                    <div class="info-item">
                        <label class="info-label">Category</label>
                        <div class="info-value">
                            <span class="badge bg-primary-subtle text-primary-emphasis">
                                @(club?.Category?.CategoryCode ?? "General")
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Metadata -->
            <div class="card shadow-sm detail-card">
                <div class="card-header bg-white border-0 pt-4">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-clock-history text-primary"></i> System info
                    </h5>
                </div>
                <div class="card-body">
                    <div class="info-item mb-3">
                        <label class="info-label">Created</label>
                        <div class="info-value small">
                            @club?.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")
                            @if (!string.IsNullOrEmpty(club?.CreatedBy))
                            {
                                <div class="text-muted">by @club.CreatedBy</div>
                            }
                        </div>
                    </div>
                    @if (club?.ModifiedAt != null)
                    {
                        <div class="info-item">
                            <label class="info-label">Last modified</label>
                            <div class="info-value small">
                                @club.ModifiedAt?.ToString("MMM dd, yyyy hh:mm tt")
                                @if (!string.IsNullOrEmpty(club?.ModifiedBy))
                                {
                                    <div class="text-muted">by @club.ModifiedBy</div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .club-details-page {
        animation: slideUp 0.4s ease-out;
    }

    .detail-header {
        padding: 2rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 1rem;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .detail-card {
        border: 1px solid rgba(0, 0, 0, 0.05);
        border-radius: 0.75rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .detail-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.08) !important;
    }

    .detail-card .card-header h5 {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .status-badge.status-active {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .status-badge.status-inactive {
        background-color: #e9ecef;
        color: #495057;
    }

    .status-badge.status-suspended {
        background-color: #fff3cd;
        color: #664d03;
    }

    .info-item {
        padding: 0.75rem 0;
    }

    .info-label {
        display: block;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: #6c757d;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .info-value {
        font-size: 1rem;
        color: #212529;
        font-weight: 500;
    }

    .membership-stat {
        text-align: center;
        padding: 1.5rem 1rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
        border-radius: 0.75rem;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #0d6efd;
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .stat-badge {
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: #6c757d;
        font-weight: 600;
    }

    .user-avatar {
        font-size: 1.5rem;
        color: #0d6efd;
    }

    .breadcrumb {
        background-color: transparent;
        padding: 0;
        margin: 0;
    }

    .breadcrumb-item a {
        text-decoration: none;
        color: #0d6efd;
    }

    .breadcrumb-item.active {
        color: #6c757d;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Bootstrap Icons fallback */
    .bi::before {
        display: inline-block;
        font-family: 'bootstrap-icons' !important;
    }
</style>

<!-- Bootstrap Icons CDN (if not already included) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">