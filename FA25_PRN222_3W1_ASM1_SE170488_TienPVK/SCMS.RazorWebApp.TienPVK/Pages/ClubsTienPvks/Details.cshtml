@page
@model SCMS.RazorWebApp.TienPVK.Pages.ClubsTienPvks.DetailsModel

@{
    ViewData["Title"] = Model.ClubsTienPvk?.ClubName ?? "Club Details";
    var club = Model.ClubsTienPvk;
}

<!-- Toast Container -->
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999">
    <div id="successToast" class="toast align-items-center text-bg-info border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-info-circle"></i> <span id="toastMessage"></span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

<!-- Delete Notification Modal -->
<div class="modal fade" id="deleteNotificationModal" tabindex="-1" aria-labelledby="deleteNotificationModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white border-0">
                <h5 class="modal-title" id="deleteNotificationModalLabel">
                    <i class="bi bi-trash-fill me-2"></i> Club Deleted
                </h5>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-3">
                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 3rem;"></i>
                </div>
                <h5 class="mb-3">This club has been deleted</h5>
                <p class="text-muted mb-0">The club you are viewing has been removed from the system.</p>
            </div>
            <div class="modal-footer border-0 justify-content-center">
                <a href="/ClubsTienPvks/Index" class="btn btn-primary btn-lg px-5">
                    <i class="bi bi-list-ul me-2"></i> Go to Club List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="club-details-page">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="./Index">Clubs</a></li>
            <li class="breadcrumb-item active" aria-current="page">@club?.ClubName</li>
        </ol>
    </nav>

    <!-- Header Section -->
    <div class="detail-header mb-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start gap-3">
            <div class="flex-grow-1">
                <div class="d-flex align-items-center gap-3 mb-2">
                    <span class="badge bg-primary fs-6">@club?.Category?.CategoryCode</span>
                    <span class="status-badge status-@club?.Status?.ToLower()">@club?.Status</span>
                </div>
                <h1 class="display-5 fw-bold mb-2">@club?.ClubName</h1>
                <p class="text-muted mb-0">
                    <i class="bi bi-hash"></i> @club?.ClubCode
                </p>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-primary btn-lg" asp-page="./Edit" asp-route-id="@club?.ClubIdtienPvk">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a class="btn btn-outline-secondary btn-lg" asp-page="./Index">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="row g-4">
        <!-- Left Column - Primary Info -->
        <div class="col-lg-8">
            <!-- About Section -->
            <div class="card shadow-sm mb-4 detail-card">
                <div class="card-header bg-white border-0 pt-4">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-info-circle text-primary"></i> About this club
                    </h5>
                </div>
                <div class="card-body">
                    <p class="lead text-secondary">
                        @(club?.Description ?? "No description available.")
                    </p>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card shadow-sm mb-4 detail-card">
                <div class="card-header bg-white border-0 pt-4">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-envelope text-primary"></i> Contact information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">Email</label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(club?.Email))
                                    {
                                        <a href="mailto:@club.Email" class="text-decoration-none">@club.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">‚Äî</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">Phone</label>
                                <div class="info-value">
                                    @if (!string.IsNullOrEmpty(club?.Phone))
                                    {
                                        <a href="tel:@club.Phone" class="text-decoration-none">@club.Phone</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">‚Äî</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="info-item">
                                <label class="info-label">Address</label>
                                <div class="info-value">@(club?.Address ?? "‚Äî")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Membership Details -->
            <div class="card shadow-sm detail-card">
                <div class="card-header bg-white border-0 pt-4">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-people text-primary"></i> Membership
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="membership-stat">
                                <div class="stat-number">@club?.MemberLimit</div>
                                <div class="stat-label">Member limit</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="membership-stat">
                                <div class="stat-badge">
                                    @if (club?.IsOpenToJoin == true)
                                    {
                                        <span class="badge rounded-pill bg-success fs-6 py-2 px-3">
                                            <i class="bi bi-check-circle"></i> Open
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-secondary fs-6 py-2 px-3">
                                            <i class="bi bi-lock"></i> Closed
                                        </span>
                                    }
                                </div>
                                <div class="stat-label">Join status</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="membership-stat">
                                <div class="stat-badge">
                                    @if (club?.RequiresApproval == true)
                                    {
                                        <span class="badge rounded-pill bg-warning text-dark fs-6 py-2 px-3">
                                            <i class="bi bi-shield-check"></i> Required
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-info fs-6 py-2 px-3">
                                            <i class="bi bi-lightning"></i> Auto
                                        </span>
                                    }
                                </div>
                                <div class="stat-label">Approval</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Metadata -->
        <div class="col-lg-4">
            <!-- Key Information -->
            <div class="card shadow-sm mb-4 detail-card">
                <div class="card-header bg-white border-0 pt-4">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-clipboard-data text-primary"></i> Quick info
                    </h5>
                </div>
                <div class="card-body">
                    <div class="info-item mb-3">
                        <label class="info-label">Club manager</label>
                        <div class="info-value d-flex align-items-center gap-2">
                            <div class="user-avatar">
                                <i class="bi bi-person-circle"></i>
                            </div>
                            <span>@(club?.ManagerUser?.Email ?? "Not assigned")</span>
                        </div>
                    </div>
                    <div class="info-item mb-3">
                        <label class="info-label">Founded date</label>
                        <div class="info-value">
                            <i class="bi bi-calendar-event"></i>
                            @club?.FoundedDate.ToString("MMMM dd, yyyy")
                        </div>
                    </div>
                    <div class="info-item">
                        <label class="info-label">Category</label>
                        <div class="info-value">
                            <span class="badge bg-primary-subtle text-primary-emphasis">
                                @(club?.Category?.CategoryCode ?? "General")
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Metadata -->
            <div class="card shadow-sm detail-card">
                <div class="card-header bg-white border-0 pt-4">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-clock-history text-primary"></i> System info
                    </h5>
                </div>
                <div class="card-body">
                    <div class="info-item mb-3">
                        <label class="info-label">Created</label>
                        <div class="info-value small">
                            @club?.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")
                            @if (!string.IsNullOrEmpty(club?.CreatedBy))
                            {
                                <div class="text-muted">by @club.CreatedBy</div>
                            }
                        </div>
                    </div>
                    @if (club?.ModifiedAt != null)
                    {
                        <div class="info-item">
                            <label class="info-label">Last modified</label>
                            <div class="info-value small">
                                @club.ModifiedAt?.ToString("MMM dd, yyyy hh:mm tt")
                                @if (!string.IsNullOrEmpty(club?.ModifiedBy))
                                {
                                    <div class="text-muted">by @club.ModifiedBy</div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .club-details-page {
        animation: slideUp 0.4s ease-out;
    }

    .detail-header {
        padding: 2rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 1rem;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .detail-card {
        border: 1px solid rgba(0, 0, 0, 0.05);
        border-radius: 0.75rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .detail-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.08) !important;
    }

    .detail-card .card-header h5 {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .status-badge.status-active {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .status-badge.status-inactive {
        background-color: #e9ecef;
        color: #495057;
    }

    .status-badge.status-suspended {
        background-color: #fff3cd;
        color: #664d03;
    }

    .info-item {
        padding: 0.75rem 0;
    }

    .info-label {
        display: block;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: #6c757d;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .info-value {
        font-size: 1rem;
        color: #212529;
        font-weight: 500;
    }

    .membership-stat {
        text-align: center;
        padding: 1.5rem 1rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
        border-radius: 0.75rem;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #0d6efd;
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .stat-badge {
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: #6c757d;
        font-weight: 600;
    }

    .user-avatar {
        font-size: 1.5rem;
        color: #0d6efd;
    }

    .breadcrumb {
        background-color: transparent;
        padding: 0;
        margin: 0;
    }

    .breadcrumb-item a {
        text-decoration: none;
        color: #0d6efd;
    }

    .breadcrumb-item.active {
        color: #6c757d;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Bootstrap Icons fallback */
    .bi::before {
        display: inline-block;
        font-family: 'bootstrap-icons' !important;
    }

    .content-updated {
        animation: contentFlash 1s ease;
    }

    @@keyframes contentFlash {
        0%, 100% {
            background-color: transparent;
        }
        50% {
            background-color: rgba(13, 110, 253, 0.05);
        }
    }</style>

<!-- Bootstrap Icons CDN (if not already included) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
@section Scripts {
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script>
        "use strict";

        function showToast(message) {
            document.getElementById('toastMessage').textContent = message;
            var toast = new bootstrap.Toast(document.getElementById('successToast'));
            toast.show();
        }

        var connection = new signalR.HubConnectionBuilder()
            .withUrl("/clubHub")
            .configureLogging(signalR.LogLevel.Information)
            .build();

        connection.start().then(function ()
        {
            console.log("SignalR connected successfully on Details page");
        }).catch(function (err)
        {
            console.error("SignalR connection error:", err.toString());
        });

        // Get the current club ID from the page
        var currentClubId = "@Model.ClubsTienPvk?.ClubIdtienPvk";

        connection.on("DeleteClub", function (clubId)
        {
            console.log("Received DeleteClub event for ID:", clubId);
            console.log("Comparing with current club ID:", currentClubId);
            // If the deleted club is the one being viewed, clear view and show modal
            if (clubId.toString() === currentClubId.toString())
            {
                console.log("This club was deleted!");
                
                // First, empty/fade out the main content
                const mainContent = document.querySelector('.club-details-page');
                if (mainContent) {
                    mainContent.style.transition = 'opacity 0.3s ease-out';
                    mainContent.style.opacity = '0';
                    
                    setTimeout(() => {
                        // Clear the content
                        const detailHeader = document.querySelector('.detail-header');
                        const mainGrid = document.querySelector('.row.g-4');
                        
                        if (detailHeader) detailHeader.innerHTML = '';
                        if (mainGrid) mainGrid.innerHTML = '';
                        
                        // Add a centered message
                        mainContent.innerHTML = `
                            <div class="text-center py-5">
                                <i class="bi bi-trash-fill text-danger" style="font-size: 5rem; opacity: 0.3;"></i>
                                <h3 class="text-muted mt-3">Club Deleted</h3>
                            </div>
                        `;
                        mainContent.style.opacity = '1';
                        
                        // Then show the delete notification modal
                        const deleteModal = new bootstrap.Modal(document.getElementById('deleteNotificationModal'));
                        deleteModal.show();
                    }, 300);
                }
                
                // Disable all action buttons on the page
                document.querySelectorAll('.btn-primary, .btn-outline-secondary').forEach(btn => {
                    if (btn.tagName === 'A' && !btn.getAttribute('href').includes('Index')) {
                        btn.classList.add('disabled');
                        btn.style.pointerEvents = 'none';
                        btn.style.opacity = '0.5';
                    }
                });
            }
        });

        connection.on("UpdateClub", function (clubId)
        {
            console.log("Received UpdateClub event for ID:", clubId, "Type:", typeof clubId);
            console.log("Current club ID:", currentClubId, "Type:", typeof currentClubId);
            
            // If the updated club is the one being viewed, fetch and update the data
            // Convert both to strings for comparison to avoid type mismatch
            if (clubId.toString() === currentClubId.toString())
            {
                console.log("Match! Fetching updated club data...");
                showToast('üîÑ This club was just updated! Refreshing data...');
                
                fetch(`?handler=GetClubData&id=${clubId}`)
                    .then(response => {
                        console.log("Fetch response status:", response.status);
                        if (!response.ok) {
                            throw new Error('Failed to fetch updated data: ' + response.status);
                        }
                        return response.json();
                    })
                    .then(data =>
                    {
                        console.log("Received data:", data);
                        if (data)
                        {
                            // Update the page content with new data
                            updateClubDetails(data);
                            // Add a visual indicator that data was updated
                            document.body.classList.add('content-updated');
                            setTimeout(() => {
                                document.body.classList.remove('content-updated');
                                showToast('‚úÖ Club details updated successfully!');
                            }, 500);
                            console.log("Club details updated successfully");
                        }
                    })
                    .catch(err =>
                    {
                        console.error("Error fetching updated club data:", err);
                        showToast('‚ö†Ô∏è Failed to fetch updated data: ' + err.message);
                    });
            }
            else
            {
                console.log("No match - this update is for a different club");
            }
        });

        function updateClubDetails(club)
        {
            console.log("Updating club details with data:", club);
            
            // Update page title
            if (club.clubName) {
                document.title = club.clubName;
                const titleElem = document.querySelector('h1.display-5');
                if (titleElem) titleElem.textContent = club.clubName;
            }
            
            // Update club code
            const clubCodeElem = document.querySelector('.text-muted .bi-hash');
            if (clubCodeElem && clubCodeElem.parentNode) {
                clubCodeElem.parentNode.innerHTML = `<i class="bi bi-hash"></i> ${club.clubCode || ''}`;
            }
            
            // Update description
            const descElem = document.querySelector('.lead.text-secondary');
            if (descElem) descElem.textContent = club.description || 'No description available.';
            
            // Update status badge
            const statusBadge = document.querySelector('.status-badge');
            if (statusBadge && club.status) {
                statusBadge.textContent = club.status;
                statusBadge.className = 'status-badge status-' + club.status.toLowerCase();
            }
            
            // Update category badge
            const categoryBadge = document.querySelector('.badge.bg-primary');
            if (categoryBadge && club.categoryCode) {
                categoryBadge.textContent = club.categoryCode;
            }
            
            // Update email
            const emailElem = document.querySelector('a[href^="mailto:"]');
            if (club.email) {
                if (emailElem) {
                    emailElem.href = `mailto:${club.email}`;
                    emailElem.textContent = club.email;
                } else {
                    // Find email container and update
                    const emailContainer = Array.from(document.querySelectorAll('.info-label'))
                        .find(el => el.textContent.includes('Email'));
                    if (emailContainer) {
                        const valueDiv = emailContainer.nextElementSibling;
                        if (valueDiv) valueDiv.innerHTML = `<a href="mailto:${club.email}" class="text-decoration-none">${club.email}</a>`;
                    }
                }
            }
            
            // Update phone
            const phoneElem = document.querySelector('a[href^="tel:"]');
            if (club.phone) {
                if (phoneElem) {
                    phoneElem.href = `tel:${club.phone}`;
                    phoneElem.textContent = club.phone;
                } else {
                    const phoneContainer = Array.from(document.querySelectorAll('.info-label'))
                        .find(el => el.textContent.includes('Phone'));
                    if (phoneContainer) {
                        const valueDiv = phoneContainer.nextElementSibling;
                        if (valueDiv) valueDiv.innerHTML = `<a href="tel:${club.phone}" class="text-decoration-none">${club.phone}</a>`;
                    }
                }
            }
            
            // Update all other text fields by finding their labels
            const updateByLabel = (labelText, value) => {
                const label = Array.from(document.querySelectorAll('.info-label'))
                    .find(el => el.textContent.includes(labelText));
                if (label) {
                    const valueDiv = label.nextElementSibling;
                    if (valueDiv) valueDiv.textContent = value || '‚Äî';
                }
            };
            
            updateByLabel('Address', club.address);
            updateByLabel('Founded', club.foundedDate);
            updateByLabel('Member Limit', club.memberLimit);
            updateByLabel('Manager', club.managerEmail);
            
            console.log("All club details updated successfully");
        }

        connection.on("CreateClub", function (clubId)
        {
            console.log("Received CreateClub event for ID:", clubId);
            // No action needed on details page for new clubs
        });
    </script>
}
