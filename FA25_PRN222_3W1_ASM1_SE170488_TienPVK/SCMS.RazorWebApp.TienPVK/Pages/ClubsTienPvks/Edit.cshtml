<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script>
    "use strict";

    var connection = new signalR.HubConnectionBuilder().withUrl("/zPaymentHub").build();

    connection.start()
        .then(() => console.log("Connected to the SignalR Hub"))
        .catch(err => console.error(err.toString()));

    document.getElementById("btnUpdateSignalR").addEventListener("click", function (event)
    {

        var dataObj = JSON.stringify({
            CashDepositSlipId: document.getElementById("TransactionCashDepositSlip_CashDepositSlipId").value,
            Code: document.getElementById("TransactionCashDepositSlip_Code").value,
            CashDepositDate: document.getElementById("TransactionCashDepositSlip_CashDepositDate").value,
            DepositorName: document.getElementById("TransactionCashDepositSlip_DepositorName").value,
            Address: document.getElementById("TransactionCashDepositSlip_Address").value,
            AccountNo: document.getElementById("TransactionCashDepositSlip_AccountNo").value,
            AccountName: document.getElementById("TransactionCashDepositSlip_AccountName").value,
            WithBank: document.getElementById("TransactionCashDepositSlip_WithBank").value,
            CurrencyCode: document.getElementById("TransactionCashDepositSlip_CurrencyCode").value,
            AmountInFigures: document.getElementById("TransactionCashDepositSlip_AmountInFigures").value,
            AmountInWord: document.getElementById("TransactionCashDepositSlip_AmountInWord").value,
            Remarks: document.getElementById("TransactionCashDepositSlip_Remarks").value,
            CashierCode: document.getElementById("TransactionCashDepositSlip_CashierCode").value,
            TellerCode: document.getElementById("TransactionCashDepositSlip_TellerCode").value,
            Supervisor: document.getElementById("TransactionCashDepositSlip_Supervisor").value,
            StatusCode: document.getElementById("TransactionCashDepositSlip_StatusCode").value,
            IsActive: document.getElementById("TransactionCashDepositSlip_IsActive").value,
            RequestCode: document.getElementById("TransactionCashDepositSlip_RequestCode").value,
            ApplicationCode: document.getElementById("TransactionCashDepositSlip_ApplicationCode").value,
            CreatedDate: document.getElementById("TransactionCashDepositSlip_CreatedDate").value,
            CreatedBy: document.getElementById("TransactionCashDepositSlip_CreatedBy").value,
            ModifiedDate: document.getElementById("TransactionCashDepositSlip_ModifiedDate").value,
            ModifiedBy: document.getElementById("TransactionCashDepositSlip_ModifiedBy").value
            //: document.getElementById("TransactionCashDepositSlip_").value,
        });

        console.log(dataObj);

        connection.invoke("HubUpdate_TransactionCashDepositSlip", dataObj)
            .catch(err => console.error(err.toString()));

        event.preventDefault();

    });

</script>