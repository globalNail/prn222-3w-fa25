@page "/admin"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "1")]

<PageTitle>Admin Dashboard</PageTitle>

<style>
    .admin-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 3rem 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        box-shadow: 0 10px 40px rgba(245, 87, 108, 0.3);
    }

    .admin-card {
        border: none;
        border-radius: 15px;
        transition: all 0.3s ease;
        height: 100%;
        background: white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    }

    .admin-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    }

    .admin-card .card-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin-bottom: 1rem;
    }

    .admin-card.users .card-icon {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .admin-card.settings .card-icon {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }

    .admin-card.reports .card-icon {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
    }

    .admin-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 0.5rem 2rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .admin-btn:hover {
        transform: scale(1.05);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }
</style>

<div class="container mt-4">
    <div class="admin-header">
        <h1 class="display-5 fw-bold mb-2"><i class="bi bi-shield-check"></i> Admin Dashboard</h1>
        <p class="mb-0 opacity-75">Administrative access granted - Role ID: 1</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card admin-card users">
                <div class="card-body text-center p-4">
                    <div class="card-icon mx-auto">
                        <i class="bi bi-people"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-2">Manage Users</h5>
                    <p class="card-text text-muted mb-4">View and manage system users</p>
                    <a href="#" class="btn admin-btn">Go to Users</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card admin-card settings">
                <div class="card-body text-center p-4">
                    <div class="card-icon mx-auto">
                        <i class="bi bi-gear"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-2">System Settings</h5>
                    <p class="card-text text-muted mb-4">Configure system settings</p>
                    <a href="#" class="btn admin-btn">Settings</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card admin-card reports">
                <div class="card-body text-center p-4">
                    <div class="card-icon mx-auto">
                        <i class="bi bi-graph-up"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-2">Reports</h5>
                    <p class="card-text text-muted mb-4">View system reports</p>
                    <a href="#" class="btn admin-btn">Reports</a>
                </div>
            </div>
        </div>
    </div>
</div>