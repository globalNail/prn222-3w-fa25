@code {
    private List<ClubCategoriesTienPvk> categories = new();
    private List<SystemAccount> accounts = new();


    [SupplyParameterFromForm]
    private ClubsTienPvk ClubsTienPvk { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        // Load dropdown data
        categories = await Service.CategoryService.GetAllAsync();
        accounts = await Service.AccountService.GetAllAsync();

        // Set mặc định để tránh lỗi bind int không nullable
        if (ClubsTienPvk.CategoryIdtienPvk == 0 && categories.Count > 0)
            ClubsTienPvk.CategoryIdtienPvk = categories[0].CategoryIdtienPvk;

        if (ClubsTienPvk.ManagerUserId == 0 && accounts.Count > 0)
            ClubsTienPvk.ManagerUserId = accounts[0].UserAccountId;
    }

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddClubsTienPvk()
    {
        // using var context = DbFactory.CreateDbContext();
        // context.ClubsTienPvks.Add(ClubsTienPvk);
        // await context.SaveChangesAsync();
        await Service.ClubService.CreateAsync(ClubsTienPvk);
        NavigationManager.NavigateTo("/clubstienpvks");
    }
}
