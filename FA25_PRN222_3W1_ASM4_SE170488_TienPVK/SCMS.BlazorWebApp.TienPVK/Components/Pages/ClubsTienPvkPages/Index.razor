@page "/clubstienpvks"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.QuickGrid
@using Microsoft.EntityFrameworkCore
@using SCMS.Domain.TienPVK.Models
@using SCMS.Repository.TienPVK.DBContext
@using SCMS.Service.TienPVK
@* @implements IAsyncDisposable *@
@inject AppServiceProvider Service;
@rendermode InteractiveServer


<PageTitle>Clubs Management</PageTitle>

<style>
    .clubs-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    .create-btn {
        background: white;
        color: #667eea;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .create-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .modern-table {
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    }

    .modern-table thead {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .modern-table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .action-link {
        color: #667eea;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .action-link:hover {
        color: #764ba2;
    }

    .search-box {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .search-box input {
        padding-left: 2.5rem;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .search-box input:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .search-box .search-icon {
        position: absolute;
        left: 0.8rem;
        top: 50%;
        transform: translateY(-50%);
        color: #667eea;
        font-size: 1.1rem;
    }
</style>

<div class="container-fluid">
    <div class="clubs-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="mb-2"><i class="bi bi-people-fill"></i> Clubs Management</h1>
                <p class="mb-0 opacity-75">Manage all student clubs and organizations</p>
            </div>
            <a href="clubstienpvks/create" class="create-btn">
                <i class="bi bi-plus-circle me-2"></i>Create New Club
            </a>
        </div>
    </div>

    <div class="search-box">
        <i class="bi bi-search search-icon"></i>
        <input type="text" class="form-control" placeholder="Search clubs by code, name, email, phone, or status..." 
               @bind-value="SearchTerm" @bind-value:event="oninput" />
    </div>

    <div class="modern-table">
        <QuickGrid Class="table table-hover mb-0" Items="sessions" TGridItem="ClubsTienPvk" Pagination="pagination">
            <PropertyColumn Property="clubstienpvk => clubstienpvk.ClubCode" Title="Code" />
            <PropertyColumn Property="clubstienpvk => clubstienpvk.ClubName" Title="Club Name" />
            <TemplateColumn Title="Category">
                @context.Category?.CategoryName
            </TemplateColumn>
            <PropertyColumn Property="clubstienpvk => clubstienpvk.FoundedDate" Title="Founded" Format="dd/MM/yyyy" />
            <PropertyColumn Property="clubstienpvk => clubstienpvk.Email" Title="Email" />
            <PropertyColumn Property="clubstienpvk => clubstienpvk.Phone" Title="Phone" />
            <PropertyColumn Property="clubstienpvk => clubstienpvk.MemberLimit" Title="Member Limit" />
            <PropertyColumn Property="clubstienpvk => clubstienpvk.Status" Title="Status" />

            <TemplateColumn Title="Actions" Context="clubstienpvk">
                <a href="@($"clubstienpvks/edit?clubidtienpvk={clubstienpvk.ClubIdtienPvk}")" class="action-link me-2">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a href="@($"clubstienpvks/details?clubidtienpvk={clubstienpvk.ClubIdtienPvk}")"
                    class="action-link me-2">
                    <i class="bi bi-eye"></i> Details
                </a>
                <a href="@($"clubstienpvks/delete?clubidtienpvk={clubstienpvk.ClubIdtienPvk}")"
                    class="action-link text-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </TemplateColumn>
        </QuickGrid>
    </div>

    <div class="mt-3 d-flex justify-content-center">
        <Paginator State="pagination" />
    </div>
</div>

@code {
    private IQueryable<ClubsTienPvk> sessions
    = Enumerable.Empty<ClubsTienPvk>().AsQueryable();
    
    private List<ClubsTienPvk> allClubs = new();

    private bool isLoading = true;
    private string? loadError;
    
    PaginationState pagination = new PaginationState { ItemsPerPage = 10 };
    
    private string searchTerm = string.Empty;
    private System.Threading.Timer? debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadClubs();
    }

    private async Task LoadClubs()
    {
        var data = await Service.ClubService.GetAllAsync();
        allClubs = data.ToList();
        ApplyFilter();
    }
    
    private string SearchTerm
    {
        get => searchTerm;
        set
        {
            if (searchTerm != value)
            {
                searchTerm = value;
                debounceTimer?.Dispose();
                debounceTimer = new System.Threading.Timer(_ =>
                {
                    InvokeAsync(() =>
                    {
                        ApplyFilter();
                        StateHasChanged();
                    });
                }, null, 500, System.Threading.Timeout.Infinite);
            }
        }
    }
    
    private void ApplyFilter()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            sessions = allClubs.AsQueryable();
        }
        else
        {
            var term = searchTerm.ToLower();
            sessions = allClubs.Where(c =>
                (c.ClubCode != null && c.ClubCode.ToLower().Contains(term)) ||
                (c.ClubName != null && c.ClubName.ToLower().Contains(term)) ||
                (c.Email != null && c.Email.ToLower().Contains(term)) ||
                (c.Phone != null && c.Phone.ToLower().Contains(term)) ||
                (c.Status != null && c.Status.ToLower().Contains(term)) ||
                (c.Category?.CategoryName != null && c.Category.CategoryName.ToLower().Contains(term))
            ).AsQueryable();
        }
    }
    
    public void Dispose()
    {
        debounceTimer?.Dispose();
    }

    // public async ValueTask DisposeAsync() => await sessions.DisposeAsync();
}