@page "/clubstienpvks/delete"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using SCMS.Domain.TienPVK.Models
@using SCMS.Service.TienPVK
@inject AppServiceProvider Service;
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Delete Club</PageTitle>

<style>
    .delete-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(245, 87, 108, 0.3);
    }

    .delete-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .delete-warning {
        background: #fff3cd;
        border-left: 4px solid #ffc107;
        padding: 1rem 1.5rem;
        margin-bottom: 2rem;
        border-radius: 8px;
    }

    .detail-row {
        padding: 1rem;
        border-bottom: 1px solid #f0f0f0;
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: 600;
        color: #f5576c;
    }

    .btn-delete {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border: none;
        color: white;
        padding: 0.6rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-delete:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(245, 87, 108, 0.4);
    }
</style>

<div class="container mt-4">
    @if (clubstienpvk is null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-danger" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading club details...</p>
        </div>
    }
    else
    {
        <div class="delete-header">
            <h1 class="mb-2"><i class="bi bi-exclamation-triangle"></i> Delete Club</h1>
            <p class="mb-0 opacity-75">Are you sure you want to delete this club?</p>
        </div>

        <div class="delete-warning">
            <h5 class="mb-2"><i class="bi bi-exclamation-circle me-2"></i>Warning</h5>
            <p class="mb-0">This action cannot be undone. All data associated with this club will be permanently deleted.
            </p>
        </div>

        <div class="delete-card">
            <div class="card-body p-0">
                <div class="detail-row">
                    <div class="row">
                        <div class="col-md-3 detail-label">Club Code</div>
                        <div class="col-md-9">@clubstienpvk.ClubCode</div>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="row">
                        <div class="col-md-3 detail-label">Club Name</div>
                        <div class="col-md-9 fw-semibold">@clubstienpvk.ClubName</div>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="row">
                        <div class="col-md-3 detail-label">Category</div>
                        <div class="col-md-9">@clubstienpvk.Category?.CategoryName</div>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="row">
                        <div class="col-md-3 detail-label">Description</div>
                        <div class="col-md-9">@clubstienpvk.Description</div>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="row">
                        <div class="col-md-3 detail-label">Founded Date</div>
                        <div class="col-md-9">@clubstienpvk.FoundedDate.ToString("dd/MM/yyyy")</div>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="row">
                        <div class="col-md-3 detail-label">Email</div>
                        <div class="col-md-9">@clubstienpvk.Email</div>
                    </div>
                </div>
                <div class="detail-row">
                    <div class="row">
                        <div class="col-md-3 detail-label">Status</div>
                        <div class="col-md-9"><span class="badge bg-primary">@clubstienpvk.Status</span></div>
                    </div>
                </div>

                <div class="p-4 bg-light">
                    <EditForm method="post" Model="clubstienpvk" OnValidSubmit="DeleteClubsTienPvk" FormName="delete"
                        Enhance>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-delete" disabled="@(clubstienpvk is null)">
                                <i class="bi bi-trash me-2"></i>Confirm Delete
                            </button>
                            <a href="/clubstienpvks" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private ClubsTienPvk? clubstienpvk;

    [SupplyParameterFromQuery]
    private int ClubIdtienPvk { get; set; }

    protected override async Task OnInitializedAsync()
    {
        clubstienpvk = await Service.ClubService.GetByIdAsync(ClubIdtienPvk);

        if (clubstienpvk is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteClubsTienPvk()
    {
        try
        {

            await Service.ClubService.DeleteAsync(clubstienpvk!.ClubIdtienPvk);
            NavigationManager.NavigateTo("/clubstienpvks");
        }
        catch (Exception ex)
        {
            // Log the exception (dbEx) as needed
            // Show a user-friendly error message
            return;
        }
    }
}