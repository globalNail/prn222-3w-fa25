@page "/profile"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>My Profile</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4><i class="bi bi-person-circle"></i> My Profile</h4>
                </div>
                <div class="card-body">
                    <AuthorizeView>
                        <Authorized>
                            <div class="row mb-3">
                                <div class="col-md-4 fw-bold">User ID:</div>
                                <div class="col-md-8">@context.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-4 fw-bold">Username:</div>
                                <div class="col-md-8">@context.User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-4 fw-bold">Full Name:</div>
                                <div class="col-md-8">@context.User.FindFirst("FullName")?.Value</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-4 fw-bold">Email:</div>
                                <div class="col-md-8">@context.User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-4 fw-bold">Employee Code:</div>
                                <div class="col-md-8">@context.User.FindFirst("EmployeeCode")?.Value</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-4 fw-bold">Role ID:</div>
                                <div class="col-md-8">
                                    <span class="badge bg-info">@context.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                                </div>
                            </div>
                        </Authorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
    </div>
</div>
