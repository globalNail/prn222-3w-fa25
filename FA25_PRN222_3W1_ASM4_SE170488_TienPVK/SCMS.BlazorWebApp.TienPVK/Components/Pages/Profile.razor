@page "/profile"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>My Profile</PageTitle>

<style>
    .profile-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2rem;
        border-radius: 15px 15px 0 0;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .profile-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 100%;
        height: 200%;
        background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
    }

    .profile-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: #667eea;
        margin: 0 auto 1rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .info-row {
        padding: 1rem 0;
        border-bottom: 1px solid #f0f0f0;
        transition: background 0.2s ease;
    }

    .info-row:last-child {
        border-bottom: none;
    }

    .info-row:hover {
        background: #f8f9fa;
    }

    .info-label {
        font-weight: 600;
        color: #667eea;
    }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg border-0">
                <div class="profile-header">
                    <div class="profile-avatar">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <h4 class="text-center mb-0 position-relative">My Profile</h4>
                </div>
                <div class="card-body p-4">
                    <AuthorizeView>
                        <Authorized>
                            <div class="row info-row">
                                <div class="col-md-4 info-label"><i class="bi bi-person-badge me-2"></i>Username:</div>
                                <div class="col-md-8">
                                    @context.User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value</div>
                            </div>
                            <div class="row info-row">
                                <div class="col-md-4 info-label"><i class="bi bi-person-fill me-2"></i>Full Name:</div>
                                <div class="col-md-8 fw-semibold">@context.User.FindFirst("FullName")?.Value</div>
                            </div>
                            <div class="row info-row">
                                <div class="col-md-4 info-label"><i class="bi bi-envelope me-2"></i>Email:</div>
                                <div class="col-md-8">
                                    @context.User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</div>
                            </div>
                            <div class="row info-row">
                                <div class="col-md-4 info-label"><i class="bi bi-card-text me-2"></i>Employee Code:
                                </div>
                                <div class="col-md-8">@context.User.FindFirst("EmployeeCode")?.Value</div>
                            </div>
                            <div class="row info-row">
                                <div class="col-md-4 info-label"><i class="bi bi-shield-check me-2"></i>Role ID:</div>
                                <div class="col-md-8">
                                    <span class="badge"
                                        style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">@context.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                                </div>
                            </div>
                        </Authorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
    </div>
</div>